# Environment Configuration Template
# Copy this file to .env.local for local development
# For production, set these in your deployment platform (Cloudflare, Vercel, etc.)

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================

# Application Environment
NODE_ENV=development
APP_ENV=development

# Public Application URL (used by Next.js for redirects, etc.)
APP_PUBLIC_URL=http://localhost:3000

# =============================================================================
# STRAPI BACKEND CONFIGURATION
# =============================================================================

# Strapi Backend URL
STRAPI_URL=http://localhost:1337

# Strapi API Keys (get from Strapi Admin Panel)
STRAPI_REST_READONLY_API_KEY=your-readonly-api-key-here
STRAPI_REST_CUSTOM_API_KEY=your-custom-api-key-here

# Strapi Preview Secret (for draft content)
STRAPI_PREVIEW_SECRET=your-preview-secret-here

# =============================================================================
# NEXT.JS CONFIGURATION
# =============================================================================

# Next.js Output Mode (standalone for containerized deployments)
NEXT_OUTPUT=standalone

# Webpack Cache Type (filesystem or memory)
WEBPACK_CACHE_TYPE=filesystem

# =============================================================================
# AUTHENTICATION (NextAuth.js)
# =============================================================================

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-minimum-32-characters-long

# =============================================================================
# CLOUDFLARE INFRASTRUCTURE
# =============================================================================

# Cloudflare Account Configuration
CLOUDFLARE_ACCOUNT_ID=82655735d78bf7309c659b5a576715c4
CLOUDFLARE_API_TOKEN=MpTHyC9tlf3lcP7pf3UExT24Ia_8CpMsUqLcUIAd

# R2 Storage Configuration (generate these at: https://dash.cloudflare.com/82655735d78bf7309c659b5a576715c4/r2/api-tokens)
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key

# Worker Configuration
WORKER_URL=https://framer-templates-api.workers.dev

# Pages Configuration
PAGES_PROJECT_NAME=framer-templates-ui
PAGES_DEPLOYMENT_URL=https://framer-templates-ui.pages.dev

# =============================================================================
# STRIPE PAYMENT PROCESSING
# =============================================================================

# Stripe API Keys (get from Stripe Dashboard)
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# =============================================================================
# EMAIL SERVICE CONFIGURATION
# =============================================================================

# Email Service Provider (e.g., SendGrid, Postmark)
EMAIL_SERVICE_API_KEY=your-email-service-api-key
EMAIL_FROM_ADDRESS=noreply@yourdomain.com
EMAIL_FROM_NAME=Your App Name

# =============================================================================
# SENTRY MONITORING
# =============================================================================

# Sentry Configuration (optional, for error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# =============================================================================
# RECAPTCHA (Optional)
# =============================================================================

# reCAPTCHA Configuration (optional, for form protection)
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# =============================================================================
# ADDITIONAL SECURITY
# =============================================================================

# JWT Secret for custom authentication (if needed)
JWT_SECRET=your-jwt-secret-minimum-32-characters

# =============================================================================
# DEVELOPMENT / TESTING
# =============================================================================

# Prevent unused function error logs in development
NEXT_PUBLIC_PREVENT_UNUSED_FUNCTIONS_ERROR_LOGS=true

# Revalidation interval in seconds (for ISR)
NEXT_PUBLIC_REVALIDATE=60
